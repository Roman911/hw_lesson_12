.slider
  margin 50px auto
  width 750px
  height 300px
  position relative
  &__slides
    position relative
    margin 0 auto
    width auto
    height 300px
    &_slide
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      z-index 1
      transition opacity 1s
      &:nth-of-type(1)
        background-color red
      &:nth-of-type(2)
        background-color orange
      &:nth-of-type(3)
        background-color green
      &:nth-of-type(4)
        background-color blue
      &:nth-of-type(5)
        background-color purple

.showing
  opacity 1
  z-index 2

.buttons
  position absolute
  width 100%
  display flex
  justify-content space-between
  top 50%
  z-index 3
